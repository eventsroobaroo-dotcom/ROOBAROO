# =============================================
# ENVIRONMENT VARIABLES EXAMPLE FILE
# =============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# =============================================
# GOOGLE SHEETS CONFIGURATION
# =============================================

# The ID of your Google Sheet (found in the URL)
# Example: https://docs.google.com/spreadsheets/d/1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms/edit
# The SHEET_ID would be: 1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms
GOOGLE_SHEET_ID=your_google_sheet_id_here

# The name of the sheet tab where you want to store data (default: "Form Responses")
GOOGLE_SHEET_NAME=Form Responses

# Google Service Account Email (from your JSON key file)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Google Service Account Private Key (from your JSON key file)
# Replace \n with actual line breaks when pasting
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"

# Google Cloud Project ID
GOOGLE_PROJECT_ID=your-google-cloud-project-id

# =============================================
# SERVER CONFIGURATION
# =============================================

# Port for the server to run on (Railway will set this automatically)
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Environment (development/production)
NODE_ENV=development

# =============================================
# SECURITY (OPTIONAL)
# =============================================

# Rate limiting (requests per minute per IP)
RATE_LIMIT=100

# JWT Secret (if you add authentication later)
JWT_SECRET=your-super-secret-jwt-key-here